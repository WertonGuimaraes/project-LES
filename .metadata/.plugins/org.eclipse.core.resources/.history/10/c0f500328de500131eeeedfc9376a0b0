package com.ufcg.les;

import java.util.ArrayList;

import com.ufcg.entities.Ti;
import com.ufcg.json.JSONParse;

import android.app.Activity;
import android.app.ProgressDialog;
import android.content.Intent;
import android.os.AsyncTask;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.NumberPicker;

public class AdicionarTIActivity extends Activity { 
	
	private ArrayList<Ti> TisDoUsuario;
	
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.adicionar_ti);
		
		NumberPicker horas = (NumberPicker) findViewById(R.id.hours);
		horas.setMaxValue(23);
		horas.setMinValue(0);
		horas.setValue(0);
		
		NumberPicker minutos = (NumberPicker) findViewById(R.id.minutes);
		minutos.setMaxValue(59);
		minutos.setMinValue(0);
		minutos.setValue(0);
		
		Button adicionarTI = (Button) findViewById(R.id.botaoOK);
		adicionarTI.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				
			}
		});
	}
	
	public class CapturaJSON extends AsyncTask<String, Void, Void> {
		private ProgressDialog dialog;

		@Override
		protected void onPreExecute() {
			super.onPreExecute();
			dialog = ProgressDialog.show(AdicionarTIActivity.this, "Espere",
					"Salvando BD");
		}

		@Override
		protected Void doInBackground(String... params) {
			salvaTi(dono, nome, tempo, data);
			return null;
		}

		@Override
		protected void onPostExecute(Void result) {
			super.onPostExecute(result);
			dialog.dismiss();
		}

		private ArrayList<Ti> getJSON(String dono) {
			JSONParse parser = new JSONParse(
					"http://150.165.98.11:8080/povmt/atividade/recuperaAtividades?dono="
							+ dono);
			return parser.TiPars();
		}
		
		private void salvaTi(String dono, String nome, int tempo, long data){
			JSONParse parser = new JSONParse("http://150.165.98.11:8080/povmt/atividade/salvarAtividade?dono=" + dono +
						"&nome=" + nome + "&tempo=" + tempo + "&data" + data);
		}
	}
}
