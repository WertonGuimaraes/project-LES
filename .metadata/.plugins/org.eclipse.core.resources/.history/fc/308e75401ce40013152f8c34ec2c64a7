package entities;

import java.util.Calendar;
import java.util.Date;
import java.util.GregorianCalendar;
public class Data {

	private Calendar data;

	public Data() {
		this.data = somarData(0, new Date());
	}

	public Data(int dia, int mes, int ano) {
		this.data = somarData(0, new GregorianCalendar(ano, mes, dia));
	}
	
	public long convertDateToMilissegundos(Date data){
		return data.getTime();
	}
	
	public Calendar getData() {
		return data;
	}
	
	private static Calendar somarData(int dias, Calendar data) {
		Calendar calendar = Calendar.getInstance();
		calendar.add(Calendar.DATE, dias);

		return calendar;
	}
	
	private boolean is2SemanasPassada(Data data){
		long estremo1 = convertDateToMilissegundos(somarData(-21, new Date()));
		long estremo2 = convertDateToMilissegundos(somarData(-7, new Date()));
		long dataParaComparacao = convertDateToMilissegundos(data.getData());
		
		return estremo1 <= dataParaComparacao &&  dataParaComparacao<= estremo2;
	}
}
