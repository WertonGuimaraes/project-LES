package com.ufcg.les;


import com.ufcg.les.R;

import android.os.AsyncTask;
import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;
import android.widget.TextView;

public class MainActivity extends Activity{
	
	private Button salvar, capturar;
	private TextView result;
	private final String DONO = "werton007";
	private GetTiHandler tiHandler;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);
				
		salvar = (Button) findViewById(R.id.salvarJSON);
		capturar = (Button) findViewById(R.id.capturarJSON);
		result = (TextView) findViewById(R.id.result_JSON);
		
		tiHandler = new GetTiHandler();
		
		salvar.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				result.setText("salvou");
			}
		});
		
		capturar.setOnClickListener(new View.OnClickListener() {
			@Override
			public void onClick(View v) {
				Connection.get("atividade/recuperaAtividades?dono=" + DONO, tiHandler);
				result.setText(tiHandler.getTis().size());
			}
		});
		
		
		
	}
	
	public class TiAsyncTask extends AsyncTask<Double, Void, Void> {
		
		private ProgressDialog dialog;
		
		@Override
		protected void onPreExecute() {
			super.onPreExecute();
			dialog = ProgressDialog.show(Map.this, getResources().getString(R.string.wait), getResources().getString(R.string.gettingCurrentPosition));
		}

		@Override
		protected Void doInBackground(Double... params) {
			// TODO Auto-generated method stub
			return null;
		}
	}
	
	
}
