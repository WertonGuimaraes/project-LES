package com.ufcg.les;


import java.io.IOException;
import java.io.InputStream;
import java.net.MalformedURLException;
import java.net.URL;

import android.util.Log;

import com.loopj.android.http.AsyncHttpClient;
import com.loopj.android.http.AsyncHttpResponseHandler;

/**
 * 
 * Classe que oferece serviços de requisição
 * assíncronas ao servidor.
 * 
 * @author Werton Guimaraes
 * @since LES
 *
 */
public class Connection {

        private final static String URL = "http://150.165.98.11:8080/povmt/";

        public static void get(String urlRelativa, AsyncHttpResponseHandler a ) {
                AsyncHttpClient async = new AsyncHttpClient();
                Log.d("werton", URL + urlRelativa);
                async.get(URL + urlRelativa, a);
        }

        public static InputStream getStreamFor(String urlRelativa) {
                try {
                        return new URL(URL + urlRelativa).openConnection().getInputStream();
                } catch (MalformedURLException e) {
                        e.printStackTrace();
                        throw new RuntimeException(e);
                } catch (IOException e) {
                        e.printStackTrace();
                        throw new RuntimeException(e);
                }
        }

}